<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_attendance_generate_sheet_form_view" model="ir.ui.view">
            <field name="name">hr_attendance_generate_sheet_form_view</field>
            <field name="model">hr.attendance.generate.sheet</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id"/>
                            </group>
                            <group>
                                <field name="from_date"/>
                                <field name="to_date"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="saved_generate_sheet" type="object" class="btn btn-primary" string="Generate"></button>
                        <button string="Discard" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>