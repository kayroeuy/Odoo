<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="edu_generate_class_name_view_form" model="ir.ui.view">
            <field name="name">edu_generate_class_name_view_form</field>
            <field name="model">edu.generate.classname</field>
            <field name="arch" type="xml">
                <form string="edu_generate_class_name_form">
                    <sheet>
                        <group>
                            <field name="grade_ids" widget="many2many_tags"/>
                            <field name="grade_group_ids" widget="many2many_tags"/>
                            <field name="class_type_id"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Generate" name="button_generate_classname" type="object" class="btn-primary"></button>
                    </footer>
                </form>
            </field>
        </record>
        
    
    </data>
</odoo>