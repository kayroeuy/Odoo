<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="edu_grade_group_view_form" model="ir.ui.view">
            <field name="name">edu_grade_group_view_form</field>
            <field name="model">edu.grade.group</field>
            <field name="arch" type="xml">
                <form string="edu_grade_group_form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="remark"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="edu_grade_group_view_tree" model="ir.ui.view">
            <field name="name">edu_grade_group_view_tree</field>
            <field name="model">edu.grade.group</field>
            <field name="arch" type="xml">
                <tree string="edu_grade_group_tree">
                    <field name="name"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>
        <record id="edu_grade_group_action" model="ir.actions.act_window">
            <field name="name">Grade Group</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">edu.grade.group</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>