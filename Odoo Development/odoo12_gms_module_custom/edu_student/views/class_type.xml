<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="edu_class_type_view_form" model="ir.ui.view">
            <field name="name">edu_class_type_view_form</field>
            <field name="model">edu.class.type</field>
            <field name="arch" type="xml">
                <form string="edu_class_type_form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="remark"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="edu_class_type_view_tree" model="ir.ui.view">
            <field name="name">edu_class_type_view_tree</field>
            <field name="model">edu.class.type</field>
            <field name="arch" type="xml">
                <tree string="edu_class_type_tree">
                    <field name="name"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>

        <record id="edu_class_type_action" model="ir.actions.act_window">
            <field name="name">Class Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">edu.class.type</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>